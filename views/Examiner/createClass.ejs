<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Classroom</title>
    <!-- Bootstrap CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Create New Classroom</h1>
        <div class="card shadow p-4">
            <form action="/createClass" method="POST">
                <div class="mb-3">
                    <label for="roomName" class="form-label">Classroom Name:</label>
                    <input
                        type="text"
                        id="roomName"
                        name="roomName"
                        class="form-control"
                        placeholder="Enter classroom name"
                        required
                    >
                </div>
                <button type="submit" class="btn btn-primary w-100">Create Classroom</button>
            </form>
        </div>
    </div>

    <!-- Socket.IO Script -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        
        socket.on("roomCreated", (data) => {
            console.log("New room created:", data.message);
            // You can add notifications or real-time updates here
        });
    </script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
